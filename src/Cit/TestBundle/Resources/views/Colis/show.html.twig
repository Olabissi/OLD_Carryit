<h1>Colis</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ entity.Categorie }}</td>
        </tr>
        <tr>
            <th>Poids_kg</th>
            <td>{{ entity.Poidskg }}</td>
        </tr>
        <tr>
            <th>Date_livraison_souhaitee</th>
            <td>{{ entity.datelivraisonsouhaitee|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ville_depart</th>
            <td>{{ entity.villedepart }}</td>
        </tr>
        <tr>
            <th>Ville_arrivee</th>
            <td>{{ entity.villearrivee }}</td>
        </tr>
        <tr>
            <th>Nomdestinataire</th>
            <td>{{ entity.NomDestinataire }}</td>
        </tr>
        <tr>
            <th>Telephonedestinataire</th>
            <td>{{ entity.TelephoneDestinataire }}</td>
        </tr>
        <tr>
            <th>Info</th>
            <td>{{ entity.complement_info }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('colis') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('colis_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('colis_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
